# Application
APP_NAME="Beauty SaaS"
APP_VERSION="1.0.0"
NODE_ENV="development"
PORT=3000
APP_URL="http://localhost:3000"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/beauty_saas"

# Supabase Configuration
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_JWT_SECRET="your-jwt-secret"
SUPABASE_STORAGE_BUCKET="beauty-saas"
SUPABASE_STORAGE_PUBLIC_URL="https://your-project.supabase.co/storage/v1/object/public"

# Security
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="24h"

# Redis Cache
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# Cache TTL (seconds)
CACHE_TTL=300
CACHE_TTL_SHORT=60
CACHE_TTL_LONG=3600
CACHE_TTL_USER=1800
CACHE_TTL_TENANT=7200

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# File Uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="jpg,jpeg,png,pdf"

# Feature Flags
FEATURE_AGENDA=true
FEATURE_CRM=true
FEATURE_POS=true
FEATURE_INVENTORY=true
FEATURE_MARKETING=true
FEATURE_REPORTS=true
FEATURE_WORKFLOWS=true

ENABLE_GRAPHQL=false
ENABLE_WEBHOOKS=true
ENABLE_FILE_UPLOADS=true
ENABLE_AUDIT_LOGS=true
ENABLE_METRICS=true

# Integrations
ENABLE_STRIPE=false
ENABLE_MERCADOPAGO=false
ENABLE_WHATSAPP=false
ENABLE_SMS=false
ENABLE_EMAIL=true

# Email Service
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""

# WhatsApp Cloud API
WHATSAPP_TOKEN=""
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_WEBHOOK_VERIFY_TOKEN=""

# SMS Service
SMS_PROVIDER="twilio"
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Payment Providers
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

MERCADOPAGO_ACCESS_TOKEN=""
MERCADOPAGO_CLIENT_ID=""
MERCADOPAGO_CLIENT_SECRET=""

# Observability
LOG_LEVEL="info"
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090
